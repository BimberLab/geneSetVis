FROM bimberlab/oosap

# system libraries of general use
RUN apt-get update && apt-get install -y \
    sudo \
    gdebi-core \
    pandoc \
    pandoc-citeproc \
    libcurl4-gnutls-dev \
    libcairo2-dev \
    libxt-dev \
    libssl-dev \
    libssh2-1-dev \
    wget

# RUN R -e "install.packages(pkgs=c('shiny', 'shinydashboard', 'shinyWidgets', 'shinyjs', 'flexdashboard', 'dplyr', 'ggplot2', 'ggupset', 'tidyr', 'stringr', 'plotly', 'DT', 'formattable', 'stats'), repos='https://cran.rstudio.com/')" \
 #   && echo -e "local({\noptions(repos = BiocManager::repositories())\n})\n" >> ~/.Rprofile.site \
 #   && Rscript -e "BiocManager::install(c('org.Hs.eg.db', 'org.Mmu.eg.db', 'org.Mm.eg.db', 'AnnotationHub', 'ReactomePA', 'clusterProfiler', 'DOSE', 'enrichplot', 'fgsea', 'enrichR', 'biomaRt', 'STRINGdb', 'msigdbr'), dependencies=TRUE, ask = FALSE)" 

RUN R -e "install.packages(pkgs=c('shiny', 'shinydashboard', 'shinyWidgets', 'shinyjs', 'flexdashboard'), \
    repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('dplyr', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('ggplot2', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('ggupset', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('tidyr', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('stringr', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('plotly', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('DT', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('formattable', repos='http://cran.rstudio.com/')"
RUN R -e "install.packages('stats', repos='http://cran.rstudio.com/')"
RUN Rscript -e "BiocManager::install(c('org.Hs.eg.db', 'org.Mmu.eg.db', 'org.Mm.eg.db'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('AnnotationHub'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('ReactomePA'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('clusterProfiler'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('DOSE'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('enrichplot'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('fgsea'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('enrichR'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('biomaRt'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('STRINGdb'), dependencies=TRUE, ask = FALSE)" 
RUN Rscript -e "BiocManager::install(c('msigdbr'), dependencies=TRUE, ask = FALSE)" 

##avoid caching of below commands
ARG CACHEBUST=3

# copy the app to the image
COPY genesetvis /usr/local/src/genesetvis/

# select port
EXPOSE 3838

# run app
CMD ["R", "-e", "shiny::runApp('/usr/local/src/genesetvis/', host ='0.0.0.0', port = 3838, launch.browser = FALSE)"]
